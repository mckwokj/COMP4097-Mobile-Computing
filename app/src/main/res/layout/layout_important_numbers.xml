<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:layout_margin="5dp"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/ic_baseline_local_phone_24" />

        <TextView
            android:text="Admission Office"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:autoLink="phone"
            android:text="+(852)3411-2200"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <ImageView app:srcCompat="@drawable/ic_baseline_local_phone_24" />

        <TextView
            android:text="Emergencies"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:autoLink="phone"
            android:text="+(852)3411-7777"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <ImageView app:srcCompat="@drawable/ic_baseline_local_phone_24" />

        <TextView
            android:text="Health Service Centre"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:autoLink="phone"
            android:text="+(852)3411-7447"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </TableRow>


</TableLayout>
